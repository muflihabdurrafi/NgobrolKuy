<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_drawable"
    tools:context=".SettingActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/backBtn"
            android:layout_width="42dp"
            android:layout_height="35dp"
            android:src="@drawable/arrow"
            tools:layout_editor_absoluteY="7dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_width="219dp"
            android:layout_height="wrap_content"
            android:text="NgobrolKuy"
            android:textColor="@color/white"
            android:textSize="40dp"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/profile"
            app:layout_constraintTop_toBottomOf="@+id/ngobrolTxt"
            android:layout_marginTop="45dp"
            android:layout_width="58dp"
            android:layout_height="55dp"
            app:srcCompat="@drawable/circle"></ImageView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="56dp"
                android:fontFamily="@font/redhatdisplay_regular"
                android:text="Jamet"
                android:textSize="15dp"
                android:textColor="@color/white"></TextView>

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="32dp"
                android:backgroundTint="@color/pink"
                android:layout_marginTop="32dp">

                <TextView
                    android:id="@+id/ubahBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ubah display profile"
                    android:fontFamily="@font/redhatdisplay_regular"
                    android:textStyle="bold"
                    android:textSize="5pt"
                    android:textColor="@color/white"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"/>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jamet@mhs.unsoed.ac.id"
        android:textColor="@color/white"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Passwordjamet123"
        android:textColor="@color/white"></TextView>

</LinearLayout>